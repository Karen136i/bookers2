<!--投稿一覧画面右側  ここからスタート-->
<h1>Books</h1>

<table>
<% @books.each do |book| %>
 <tr>
   <td>
    <%= link_to book_path(book.user.id) do %>
     <%= image_tag book.user.get_profile_image(100, 100) %>
    <% end %>
   </td>
  <td>
    <h3>Title</h3>
    <span>
      <%= link_to book.title, book_path(book.id) %>
    </span>
  </td>
  <td>
    <h3>Opinion</h3>
    <span><%= book.body %></span>
  </td>
 </tr>
 <% end %>

</table>