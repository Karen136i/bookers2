<div class="container px-5 px-sm-0"></div>
<!--部分テンプレート化-->
<div class="container px-5 px-sm-0">
  <div class="row"> <!--横並び-->
    <div class="col-md-3">
      <%= render 'books/list', user: @user %>
    </div>



<!--詳細ページの右側 ここからスタート-->
    <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>

     <table class="table">

     <tbody>
       <tr>
         <td>
           <%= image_tag @user.get_profile_image(100,100) %>
           <br><%= link_to @user.name, "/users/#{@user.id}" %></br>
         </td>

         <td>
           <%= link_to @book.title, "/books/#{@book.id}" %>
         </td>

         <td>
           <%= @book.body %>
         </td>

         <td>
           <% if @book.user == current_user %>
             <%= link_to "Edit", edit_book_path(@book.id),class:"btn btn-success" %>
           <% end %>
         </td>

         <td>
           <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger" %>
           <% end %>
         </td>

       </tr>
     </tbody>

    </table>

   </div>





