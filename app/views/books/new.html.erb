<h1>Books</h1>

<% @books.each do |book| %>

  <div>
    <%= image_tag book.get_image %>

    <p>User info：<%= image_tag 'no_image.jpg' %></p>

    <p>name：<%= post_image.name %></p>

    <p>introduction：<%= post_image.introduction %></p>

  </div>
<% end %>



<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
