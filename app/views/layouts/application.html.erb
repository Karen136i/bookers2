 <!--すべてのページを使いまわせる・すべてのページに表示させたいものを書く場所-->
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">


        <script src="https://kit.fontawesome.com/e5fd4ead5a.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

      <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
         <div class="container">
           <%= link_to "Bookers", root_path, class: "nav-link text-light" %>


           <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
           </button>
           <div class="collapse navbar-collapse show" id="navbarNavDropdown">
               <ul class="navbar-nav ml-auto">

                <!--ログイン済みページのヘッダー-->
                <% if user_signed_in? %>

                  <%= link_to root_path, class: "nav-link text-light" do %>
                  <i class="fas fa-house"></i> Home
                  <% end %>

                  <%= link_to users_path, class: "nav-link text-light" do %>
                  <i class="fa-solid fa-users"></i> Users
                  <% end %>

                   <%= link_to books_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-book-open"></i> Book
                   <% end %>

                   <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-right-from-bracket"></i> Log out
                   <% end %>


                <% else %>

                <!--ログイン前ページのヘッダー-->

                   <%= link_to root_path, class: "nav-link text-light" do %>
                   <i class="fas fa-house"></i> Home
                   <% end %>

                   <%= link_to about_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-link"></i> About
                   <% end %>


                   <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-user-plus"></i> Sign up
                   <% end %>

                   <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                   <i class="fa-solid fa-right-to-bracket"></i> Log in
                   <% end %>

                <% end %>
              </ul>
        </header>
     <main>
      <p id="notice"></p>
      <!--フラッシュメッセージの記述をいれてもよし-->
      <div class="container">
       <div class="row">
        <%= yield %>
        
       </div>
      </div>

    </main>

   <footer>
     <div class="container mt-5 d-flex justify-content-center">
      <div class="row">
       <div class="text-center">
       <p>CopyRight Infratop.inc</p>
       </div>
      </div>
     </div>
　 </footer>
  </body>
</html>
