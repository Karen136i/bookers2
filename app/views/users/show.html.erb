<!--投稿一覧画面の左側-->
<h1>User info</h1>　

<% @books.each do |book| %>

  <div>
    <% if @book.image.attached? %>
        <%= image_tag @book.image, size: "100x100" %>
    <% else %>
        <%= image_tag 'no_image.jpg', size: "100x100" %>
    <% end %>
  
    <p>name：<%= user.name %></p>
    
    <p>introduction：<%= user.introduction %></p>
    
  </div>
<% end %>



<!--投稿一覧画面の右側-->

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

